    def kirim_laporan(self):
        nama = self.lineEdit_nama.text()
        masalah = self.lineEdit_lokasi.text()
        if not nama:
            QtWidgets.QMessageBox.warning(self.mainwindow, "Kesalahan", "Nama pelapor harus diisi.")
            return

        QtWidgets.QMessageBox.information(self.mainwindow, "Laporan Terkirim",
                                f"Terima kasih, {nama}.\n"
                                f"Laporan masalah '{masalah}' telah kami terima.")
